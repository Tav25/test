{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
  },
  "extends": [
      "airbnb-base"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "quotes": [
       "error",
       "single"
     ],
     "no-plusplus": ["error", 
      {
       "allowForLoopAfterthoughts": true
      }
    ],
    "no-use-before-define": ["error", 
      {
        "functions": false
      }
    ],
    // "no-param-reassign": ["error",
    //   {
    //     "props": false
    //   }
    // ],
    "linebreak-style": ["error", "windows"]
  }
}